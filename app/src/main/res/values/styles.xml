<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="edit_text_field">
        <item name="android:layout_width">@dimen/dialog_fixed_width_major</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/field_padding_bottom</item>
    </style>

    <style name="review_text_field" parent="edit_text_field">
        <item name="android:inputType">none</item>
        <item name="android:editable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/abc_action_button_min_height_material</item>
    </style>

    <style name="style_card">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="contentPadding">@dimen/card_padding</item>
    </style>

    <style name="style_fragment_root">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/root_padding</item>
        <item name="android:paddingBottom">@dimen/root_padding</item>
    </style>
</resources>
